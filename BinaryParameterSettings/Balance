#all binary parameter booleans mapped for the left eye openness
if LBlink <= 1 / 8:
    LBlink1 = false
    LBlink2 = false
    LBlink4 = false
elif LBlink > 1 / 8 and LBlink <= 2 / 8:
    LBlink1 = true
    LBlink2 = false
    LBlink4 = false
elif LBlink > 2 / 8 and LBlink <= 3 / 8:
    LBlink1 = false
    LBlink2 = true
    LBlink4 = false
elif LBlink > 3 / 8 and LBlink <= 4 / 8:
    LBlink1 = true
    LBlink2 = true
    LBlink4 = false
elif LBlink > 4 / 8 and LBlink <= 5 / 8:
    LBlink1 = false
    LBlink2 = false
    LBlink4 = true
elif LBlink > 5 / 8 and LBlink <= 6 / 8:
    LBlink1 = true
    LBlink2 = false
    LBlink4 = true
elif LBlink > 6 / 8 and LBlink <= 7 / 8:
    LBlink1 = false
    LBlink2 = true
    LBlink4 = true
elif LBlink > 7 / 8 and LBlink <= 1:
    LBlink1 = true
    LBlink2 = true
    LBlink4 = true
    
  #all binary parameter booleans mapped for the right eye openness
if RBlink <= 1 / 8:
    RBlink1 = false
    RBlink2 = false
    RBlink4 = false
elif RBlink > 1 / 8 and RBlink <= 2 / 8:
    RBlink1 = true
    RBlink2 = false
    RBlink4 = false
elif RBlink > 2 / 8 and RBlink <= 3 / 8:
    RBlink1 = false
    RBlink2 = true
    RBlink4 = false
elif RBlink > 3 / 8 and RBlink <= 4 / 8:
    RBlink1 = true
    RBlink2 = true
    RBlink4 = false
elif RBlink > 4 / 8 and RBlink <= 5 / 8:
    RBlink1 = false
    RBlink2 = false
    RBlink4 = true
elif RBlink > 5 / 8 and RBlink <= 6 / 8:
    RBlink1 = true
    RBlink2 = false
    RBlink4 = true
elif LBlink > 6 / 8 and RBlink <= 7 / 8:
    RBlink1 = false
    RBlink2 = true
    RBlink4 = true
elif RBlink > 7 / 8 and RBlink <= 1:
    RBlink1 = true
    RBlink2 = true
    RBlink4 = true
                
client.send_message("/Avatar/LBlink1", LBlink1)
client.send_message("/Avatar/LBlink2", LBlink2)
client.send_message("/Avatar/LBlink4", LBlink4)
client.send_message("/Avatar/RBlink1", RBlink1)
client.send_message("/Avatar/RBlink2", RBlink2)
client.send_message("/Avatar/RBlink4", RBlink4)
print('L: ', LBlink, ' R: ', RBlink)
